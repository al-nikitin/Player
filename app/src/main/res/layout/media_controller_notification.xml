<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#CC000000"
    android:orientation="horizontal">
    
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:id="@+id/song_name_notification"
            android:textSize="20sp"
            android:text="song_name_notification"
            android:textColor="#CCFFFFFF"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:id="@+id/song_artist_notification"
            android:textSize="20sp"
            android:text="song_artist_notification"
            android:textColor="#CCFFFFFF"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:paddingTop="4dip"
        android:orientation="horizontal">

        <ImageButton android:id="@+id/prev_notification"
            style="@android:style/MediaButton.Previous"
            android:contentDescription="@string/description" />

        <ImageButton android:id="@+id/pause_notification"
            style="@android:style/MediaButton.Play"
            android:contentDescription="@string/description" />

        <ImageButton android:id="@+id/next_notification"
            style="@android:style/MediaButton.Next"
            android:contentDescription="@string/description" />

    </LinearLayout>

</LinearLayout>